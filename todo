trait SwingAppFrame extends Frame with AppBasicControlApi with SwingFrameAppCreation{
  self: SwingFrameAppCreation#LayoutDSL with SwingFrameAppCreation#LayoutBuilder =>

  FramesControl.register(this)

  override def closeOperation(): Unit = {
    FramesControl.unregister(this)
    super.closeOperation()
  }
}

object FramesControl{
  private val _frames = mutable.HashSet[SwingAppFrame]
  def frames = _frames
  protected[visual] def register(frame: SwingAppFrame){
    _frames +=
  }
  protected[visual] def unregister(frame: SwingAppFrame){

  }
  var CloseOperation = () => {}

}
